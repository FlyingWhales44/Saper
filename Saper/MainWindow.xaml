<Window x:Class="Saper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saper"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="Board" Margin="10,10,0,0" Grid.Column="0"/>
        <TextBox x:Name="BoardSizeX" Grid.Column="1" Margin="10,0,10,241" TextWrapping="Wrap" Text="8" Height="23" VerticalAlignment="Bottom"/>
        <TextBox x:Name="BoardSizeY" Grid.Column="1" Margin="10,0,10,213" TextWrapping="Wrap" Text="8" Height="23" VerticalAlignment="Bottom"/>
        <TextBox x:Name="BombQuantity" Grid.Column="1" Margin="10,0,10,151" TextWrapping="Wrap" Text="8" Height="23" VerticalAlignment="Bottom"/>
        <Button x:Name="Start" Content="Start" Grid.Column="1" Margin="10,0,10,10" Height="20" VerticalAlignment="Bottom"/>


    </Grid>
</Window>
